// Example Jenkinsfile for Docker builds on Kubernetes
// This pipeline builds and pushes Docker images using Docker-in-Docker

pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins: agent
    type: docker
spec:
  containers:
  - name: jnlp
    image: jenkins/inbound-agent:latest
    args: ['$(JENKINS_SECRET)', '$(JENKINS_NAME)']
    resources:
      requests:
        memory: "256Mi"
        cpu: "100m"
      limits:
        memory: "512Mi"
        cpu: "250m"
  - name: docker
    image: docker:24-dind
    securityContext:
      privileged: true
    env:
    - name: DOCKER_TLS_CERTDIR
      value: ""
    resources:
      requests:
        memory: "512Mi"
        cpu: "250m"
      limits:
        memory: "2Gi"
        cpu: "1000m"
    volumeMounts:
    - name: docker-graph-storage
      mountPath: /var/lib/docker
  - name: docker-cli
    image: docker:24-cli
    command:
    - cat
    tty: true
    env:
    - name: DOCKER_HOST
      value: tcp://localhost:2375
  volumes:
  - name: docker-graph-storage
    emptyDir: {}
'''
            defaultContainer 'docker-cli'
        }
    }
    
    environment {
        DOCKER_IMAGE = 'my-app'
        DOCKER_TAG = "${BUILD_NUMBER}"
    }
    
    stages {
        stage('Wait for Docker') {
            steps {
                sh '''
                    echo "Waiting for Docker daemon..."
                    for i in $(seq 1 30); do
                        if docker info >/dev/null 2>&1; then
                            echo "Docker is ready!"
                            break
                        fi
                        echo "Waiting... ($i/30)"
                        sleep 2
                    done
                    docker info
                '''
            }
        }
        
        stage('Checkout') {
            steps {
                // Create a sample Dockerfile
                writeFile file: 'Dockerfile', text: '''
FROM nginx:alpine
COPY index.html /usr/share/nginx/html/
EXPOSE 80
'''
                writeFile file: 'index.html', text: '''
<!DOCTYPE html>
<html>
<head><title>Jenkins K8s Demo</title></head>
<body>
    <h1>Hello from Jenkins on Kubernetes!</h1>
    <p>Build: ${BUILD_NUMBER}</p>
</body>
</html>
'''
            }
        }
        
        stage('Build') {
            steps {
                sh '''
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                    docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                '''
            }
        }
        
        stage('Test') {
            steps {
                sh '''
                    docker run --rm ${DOCKER_IMAGE}:${DOCKER_TAG} nginx -t
                '''
            }
        }
        
        stage('Push') {
            when {
                // Only push on main branch
                branch 'main'
            }
            steps {
                // Uncomment and configure for your registry
                // withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                //     sh '''
                //         echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                //         docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                //         docker push ${DOCKER_IMAGE}:latest
                //     '''
                // }
                echo 'Skipping push - configure registry credentials first'
            }
        }
    }
    
    post {
        always {
            echo 'Docker build completed!'
            sh 'docker images | head -20 || true'
        }
    }
}
